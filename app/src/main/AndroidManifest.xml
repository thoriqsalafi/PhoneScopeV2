<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.led_on_off.led">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-feature android:name="android.hardware.camera2" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PhoneScope"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="PhoneScope">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceList"
            android:label="@string/app_name" />
        <activity
            android:name=".ledControl"
            android:label="LED Control" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" />
        <activity
            android:name=".ledButton"
            android:label="@string/title_activity_led_button" />
        <activity android:name=".capturecamera" />
        <activity android:name=".capturevideo" />
        <activity
            android:name=".processing"
            android:label="@string/title_activity_processing" />
        <activity android:name=".flowCountActivity" />
        <activity android:name=".videoActivity"></activity>
    </application>

</manifest>