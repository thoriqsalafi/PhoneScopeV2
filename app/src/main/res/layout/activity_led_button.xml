<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.led_on_off.led.ledControl"
    android:background="#3c3f41">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LED Controller "
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:textSize="20dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/on"
                android:background="@null"
                android:src="@drawable/on"
                android:layout_alignParentLeft="true"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/off"
                android:src="@drawable/red"
                android:background="@null"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <TextView
            android:text="White Intensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rSeek"
            android:layout_centerHorizontal="true"
            android:id="@+id/redInten" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rSeek"
            style="@android:style/Widget.DeviceDefault.Light.SeekBar"
            android:layout_above="@+id/discnt"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            />

        <TextView
            android:text="Yellow Intensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rSeek"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:id="@+id/greenInten"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gSeek"
            style="@android:style/Widget.DeviceDefault.Light.SeekBar"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            />

        <TextView
            android:text="Blue Intensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rSeek"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:id="@+id/blueInten"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bSeek"
            style="@android:style/Widget.DeviceDefault.Light.SeekBar"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/discnt"
            android:src="@drawable/disconnect"
            android:background="@null"
            android:layout_alignParentBottom="true"
 />

    </LinearLayout>


</RelativeLayout>
